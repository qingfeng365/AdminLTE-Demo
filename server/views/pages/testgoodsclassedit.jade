extends ../layout	

block content
	section.content-header
		h1= title
			//- small Welcome to #{title}
		ol.breadcrumb
			li
				a(href="#")
					i.fa.fa-dashboard  上级
			li.active #{title}
	section.content
		.row
			.col-xs-12
				.box.box-primary
					form(role="form")
						.box-body
							.form-group
								label(for="inputEmail1") 商品分类
								input.form-control(type="email",id="inputEmail1",placeholder="请输入商品分类名称",value='汽车电子')
							.form-group
								label(for="inputEmail1") 显示标题
								input.form-control(type="email",id="inputEmail1",placeholder="请输入商品分类的显示标题",value='汽车电子')
							.form-group
								label(for="inputEmail1") 分类描述
								textarea.form-control(type="email",id="inputEmail1",placeholder="请输入商品分类的描述说明")
							.form-group
								label(for="inputEmail1") 显示顺序
								input.form-control(type="email",id="inputEmail1",placeholder="商品分类的显示顺序",value='1')
							.form-group
								label(for="inputEmail1") 上级分类
								input.form-control(type="email",id="inputEmail1",placeholder="",value='',disabled)
							.form-group
								.checkbox
									label
										input(type="checkbox")
										|不显示
								.checkbox
									label
										input(type="checkbox")
										|停用
						.box-footer.clearfix
							button.btn.btn-success(type="submit") 保存
							button.btn.btn-warning.pull-right(type="submit") 取消