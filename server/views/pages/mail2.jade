							btn.btn.btn-default.btn-file
								i.fa.fa-paperclip
								span &nbsp;添加附件
								input(type='file',name='attachment')
							p.help-block 最大 32MB
					.box-footer
						.pull-right
							button.btn.btn-default
								i.fa.fa-pencil
								span &nbsp;存为草稿
							button.btn.btn-primary(type='submit')
								i.fa.fa-envelope-o
								span &nbsp;发送
						button.btn.btn-default(type='reset')
							i.fa.fa-times
							span &nbsp;放弃

block pagesrc
	script(src="/bower_components/AdminLTE/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.all.min.js")
	script(src="../js/mail2.js")