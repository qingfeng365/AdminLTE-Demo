			li.active 当前
	section.content
		h3 info-box
		.row
			//- 3x2 = 6 , 6x2 = 12
			.col-md-3.col-sm-6.col-xs-12
				.info-box
					span.info-box-icon.bg-aqua
						i.fa.fa-envelope-o
					.info-box-content
						span.info-box-text 消息
						span.info-box-number 1,410
			.col-md-3.col-sm-6.col-xs-12
				.info-box
					span.info-box-icon.bg-green
						i.fa.fa-flag-o
					.info-box-content
						span.info-box-text 标记
						span.info-box-number 410
			.col-md-3.col-sm-6.col-xs-12
				.info-box
					span.info-box-icon.bg-yellow
						i.fa.fa-files-o
					.info-box-content
						span.info-box-text 上传
						span.info-box-number 13,648
			.col-md-3.col-sm-6.col-xs-12
				.info-box
					span.info-box-icon.bg-red
						i.fa.fa-star-o
					.info-box-content
